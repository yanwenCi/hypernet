#!/bin/bash
for ((i=0;i<=10; =i+2))
do
    num1=10-i
    for ((j=0;j<=num1;j=j+2))
    do
        ((z=10-i-j))
        a=$(printf "%.2f" `echo "scale=3;$i/10"|bc`)
        b=$(printf "%.2f" `echo "scale=3;$j/10"|bc`)
        c=$(printf "%.2f" `echo "scale=3;$z/10"|bc`)
        echo "testing sequence $a, $b, $c"
        python train_nohyper.py --img-list data/data_lesion_cross1 --epoch 20 --lr 1e-5 --patience 3  --model-dir checkpoints/combiner1_cross1/mix$i$j$z  --mod 0  --gpu 2 --hyper-val ,$a,$b,$c   --batch-size 3 --steps-per-epoch 350
	#python test_hyper.py --img-list data/data_lesion_cross1 --model-dir checkpoints/linear_noreg_cross1  --mod 0 --load-weights 68 --gpu 2 --hyper_val ,$a,$b,$c   --pred-dir Pred_dir/linear_noreg_cross1 >checkpoints/linear_noreg_cross1/test$i$j$z
    done
done

